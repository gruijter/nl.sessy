{
	"name": {
		"en": "Day-Ahead Prices",
		"nl": "Dynamische Prijzen"
	},
	"class": "sensor",
	"capabilities": [],
	"platforms": [
		"cloud", "local"
	],
	"connectivity": [
	],
	"images": {
		"small": "{{driverAssetsPath}}/images/small.png",
		"large": "{{driverAssetsPath}}/images/large.png"
	},
	"pair": [
    {
			"id": "portal_login"
		},
    {
			"id": "list_devices",
			"template": "list_devices",
			"navigation": {
				"next": "add_devices"
			}
		},
		{
			"id": "add_devices",
			"template": "add_devices"
		},
    {
			"id": "done",
			"template": "done"
		}
	],
	"settings": [
		{
			"type": "group",
			"label": {
					"en": "Cloud connection settings",
					"nl": "Cloud verbinding instellingen"
			},
			"children": [	
				{
					"id": "username_portal",
					"type": "text",
					"label": {
							"en": "Sessy portal username",
							"nl": "Sessy portal gebruikersnaam"
					},
					"value": ""
				},
				{
					"id": "password_portal",
					"type": "password",
					"label": {
						"en": "Sessy portal password",
						"nl": "Sessy portal wachtwoord"
					},
					"value": ""
				}
			]
		},
		{
			"type": "group",
			"label": {
				"en": "Price settings",
				"nl": "Prijs instellingen"
			},
			"children": [
				{
					"id": "variableMarkup",
					"type": "number",
					"label": {
						"en": "VAT (%)",
						"nl": "BTW (%)"
					},
					"value": 21,
					"hint": {
						"en": "Enter the percentage with which the net price must be increased for VAT.",
						"nl": "Voer het percentage in waarmee de netto prijs verhoogd moet worden voor BTW."
					}
				},
				{
					"id": "fixedMarkup",
					"type": "number",
					"label": {
						"en": "Fixed markup per kWh (€)",
						"nl": "Vaste opslag per kWh (€)"
					},
					"value": 0.175,
					"hint": {
						"en": "Enter the fixed amount with which the price must be increased per kWh, incl. VAT. E.g. for purchase fee and energy tax.",
						"nl": "Voer het vaste bedrag in waarmee de prijs per kWh verhoogd moet worden incl. BTW. Bijvoorbeeld voor inkoopvergoeding en Energie belasting."
					}
				}
			]
		}
	]
}